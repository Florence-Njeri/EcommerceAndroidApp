<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ecommerceandroidapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.ecommerceandroidapp.ui.shop.ShopFragment"
        android:label="@string/title_shop"
        tools:layout="@layout/fragment_shop" />

    <fragment
        android:id="@+id/navigation_bag"
        android:name="com.example.ecommerceandroidapp.ui.bag.BagFragment"
        android:label="@string/title_bag"
        tools:layout="@layout/fragment_bag" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.ecommerceandroidapp.auth.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment"
        tools:layout="@layout/forgot_password_fragment"/>
    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.example.ecommerceandroidapp.ui.favourites.FavouritesFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/favourites_fragment" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.ecommerceandroidapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/profile_fragment" />
    <activity
        android:id="@+id/signUpActivity"
        android:name="com.example.ecommerceandroidapp.auth.SignUpActivity"
        android:label="SignUp"
        tools:layout="@layout/activity_sign_up"/>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.ecommerceandroidapp.auth.LogInFragment"
        android:label="LogIn"
        tools:layout="@layout/activity_log_in"/>
</navigation>
